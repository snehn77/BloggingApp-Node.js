<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="categories">Categories</label>
    <input required value="<%= article.categories %>" type="text" name="categories" id="categories" class="form-control">
</div>
<div class="form-group">
    <label for="content">Content</label>
    <textarea required name="content" rows="5"  id="content" class="form-control"><%= article.content %></textarea>
</div>

<button type="submit" class="btn btn-primary">Submit</button>
<a href="/" class="btn btn-danger">Cancel</a>